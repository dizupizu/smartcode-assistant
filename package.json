{
  "name": "smartcode-assistant",
  "displayName": "SmartCode Assistant",
  "description": "Generate and review code safely inside VS Code using AI. Your code is never uploaded without your consent. API keys are stored securely using VS Code Secret Storage.",
  "version": "0.1.0",
  "icon": "./media/logo.png",
  "publisher": "deeptipandey",
  "engines": {
    "vscode": "^1.107.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/deeptipandey/smartcode-assistant"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./src/extension.js",
  "activationEvents": [
    "onView:assistant.sidebar",
    "onCommand:assistant.generate",
    "onCommand:assistant.review"
  ],
  "contributes": {
    "commands": [
      {
        "command": "assistant.generate",
        "title": "Smart Code Assistant: Generate Code"
      },
      {
        "command": "assistant.review",
        "title": "Smart Code Assistant: Review Workspace Code"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "smartAssistant",
          "title": "Smart Code Assistant",
          "icon": "./media/icon.svg"
        }
      ]
    },
    "views": {
      "smartAssistant": [
        {
          "type": "webview",
          "id": "assistant.sidebar",
          "name": "Build & Review",
          "icon": "./media/icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "fs": "^0.0.1-security",
    "path": "^0.12.7"
  }
}
